extends layout

block vars
  - locals.page = 'top_customers'
  - locals.pageTitle = "Top Customers - RethinkDB Evaluation"

append content

  .container-fluid
    .row
      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-1.main
        h1.page-header Top Customers

        .table-responsive
          table#topCustomers.table.table-striped
            thead
              tr
                th Name
                th Purchases
                th Visits
            tbody
              for customer in customers
                tr
                  td= customer.firstName + ' ' + customer.lastName
                  td= '$' + customer.purchases.toFixed(2)
                  td= customer.hits




